<div class="card shadow p-2">
  <div class="row g-0">
    <div class="col-md-5">
      <img
          src="{{ asset(offerDto.headingImagePath is not null ? postDto.headingImagePath : 'build/images/element/no-image.svg') }}"
          class="card-img rounded-2"
          alt="Card image">
    </div>

    <div class="col-md-7">
      <div class="card-body py-md-2 d-flex flex-column h-100">
        <div class="d-flex justify-content-between align-items-center">
          <ul class="list-inline mb-0">
            <li class="list-inline-item me-0 small">
              <i class="fa-solid fa-star text-warning"></i>
            </li>

            <li class="list-inline-item me-0 small">
              <i class="fa-solid fa-star text-warning"></i>
            </li>

            <li class="list-inline-item me-0 small">
              <i class="fa-solid fa-star text-warning"></i>
            </li>

            <li class="list-inline-item me-0 small">
              <i class="fa-solid fa-star text-warning"></i>
            </li>

            <li class="list-inline-item me-0 small">
              <i class="fa-solid fa-star-half-alt text-warning"></i>
            </li>
          </ul>

          <ul class="list-inline mb-0 z-index-2">
            <li class="list-inline-item">
              <a href="#" class="btn btn-sm btn-round btn-light">
                <i class="fa-solid fa-fw fa-heart"></i>
              </a>
            </li>

            <li
                class="list-inline-item dropdown"
                data-controller="copy-to-clipboard"
                data-copy-to-clipboard-to-copy-value="{{ url('offer_details', { id: offerDto.id }) }}">
              <a
                  href="#"
                  class="btn btn-sm btn-round btn-light"
                  role="button"
                  id="dropdownShare2"
                  data-bs-toggle="dropdown"
                  aria-expanded="false">
                <i class="fa-solid fa-fw fa-share-alt"></i>
              </a>

              <ul class="dropdown-menu dropdown-menu-end min-w-auto shadow rounded" aria-labelledby="dropdownShare2">
                <li>
                  <a class="dropdown-item" href="#">
                    <i class="fab fa-twitter-square me-2"></i>

                    {{ 'twitter'|trans }}
                  </a>
                </li>

                <li>
                  <a class="dropdown-item" href="#">
                    <i class="fab fa-facebook-square me-2"></i>

                    {{ 'facebook'|trans }}
                  </a>
                </li>

                <li>
                  <a class="dropdown-item" href="#">
                    <i class="fab fa-linkedin me-2"></i>

                    {{ 'linkedin'|trans }}
                  </a>
                </li>

                <li>
                  <button type="button" class="dropdown-item" data-action="copy-to-clipboard#copy">
                    <i class="fa-solid fa-copy me-2"></i>

                    {{ 'copy-link'|trans }}
                  </button>
                </li>
              </ul>
            </li>
          </ul>
        </div>

        <h5 class="card-title mb-1">
          <a href="{{ path('offer_details', { id: offerDto.id }) }}">
            {{ offerDto.title }}
          </a>
        </h5>

        <p>
          {{ offerDto.shortContent }}
        </p>

        <div class="d-sm-flex justify-content-sm-between align-items-center mt-3 mt-md-auto">
          <div class="mt-3 mt-sm-0 ms-auto">
            <a href="{{ path('offer_details', { id: offerDto.id }) }}" class="btn btn-sm btn-dark mb-0 w-100">
              {{ 'view-detail'|trans }}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
