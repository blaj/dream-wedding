{% extends 'home-base.html.twig' %}

{% block title %}
  {{ 'home-page'|trans }}
{% endblock %}

{% block main %}
  <section class="pt-0">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="card bg-light p-0 pb-0">
            <div class="card-body d-flex justify-content-between flex-wrap">
              <div>
                {% for categoryName in offerDetailsDto.categoryNames %}
                  <div class="badge text-bg-dark">
                    {{ categoryName }}
                  </div>
                {% endfor %}

                <h1 class="h3 mt-2 mb-1">
                  {{ offerDetailsDto.title }}
                </h1>
              </div>

              <ul class="list-inline mb-0">
                <li class="list-inline-item">
                  <a href="#" class="btn btn-sm btn-white px-2"><i class="fa-solid fa-fw fa-heart"></i></a>
                </li>

                <li class="list-inline-item dropdown"
                    data-controller="copy-to-clipboard"
                    data-copy-to-clipboard-to-copy-value="{{ url('offer_details', { id: offerDetailsDto.id }) }}">
                  <a
                      href="#"
                      class="btn btn-sm btn-white px-2"
                      role="button"
                      id="dropdownShare"
                      data-bs-toggle="dropdown"
                      aria-expanded="false">
                    <i class="fa-solid fa-fw fa-share-alt"></i>
                  </a>

                  <ul
                      class="dropdown-menu min-w-auto shadow rounded"
                      aria-labelledby="dropdownShare">
                    <li>
                      <a class="dropdown-item" href="#">
                        <i class="fab fa-twitter-square me-2"></i>

                        {{ 'twitter'|trans }}
                      </a>
                    </li>

                    <li>
                      <a class="dropdown-item" href="#">
                        <i class="fab fa-facebook-square me-2"></i>

                        {{ 'facebook'|trans }}
                      </a>
                    </li>

                    <li>
                      <a class="dropdown-item" href="#">
                        <i class="fab fa-linkedin me-2"></i>

                        {{ 'linkedin'|trans }}
                      </a>
                    </li>

                    <li>
                      <button type="button" class="dropdown-item" data-action="copy-to-clipboard#copy">
                        <i class="fa-solid fa-copy me-2"></i>

                        {{ 'copy-link'|trans }}
                      </button>
                    </li>
                  </ul>
                </li>
              </ul>
            </div>

            <div class="card-footer bg-transparent border-top py-0">
              <ul class="nav nav-tabs nav-bottom-line nav-responsive border-0" role="tablist">
                <li class="nav-item">
                  <a class="nav-link mb-0 active" data-bs-toggle="tab" href="#description">
                    {{ 'description'|trans }}
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="pt-0">
    <div class="container">
      <div class="tab-content mb-0" id="tour-pills-tabContent">
        <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description">
          <div class="row g-4 g-lg-5">
            <div class="col-12">
              <div class="card bg-transparent">
                <div class="card-header bg-transparent border-bottom px-0 pt-0">
                  <h4 class="mb-0">
                    {{ 'description'|trans }}
                  </h4>
                </div>

                <div class="card-body px-0 pb-0">
                  <p class="mb-0">
                    {{ offerDetailsDto.content|raw }}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
