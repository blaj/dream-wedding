<div class="col-sm-6 col-lg-4 col-xl-3">
  <div class="card shadow h-100">
    <div class="position-relative">
      <img src="{{ asset('build/images/category/directory/01.jpg') }}" class="card-img-top" alt="Card image">

      <div class="card-img-overlay p-3 z-index-1">
        {% for categoryName in offerDto.categoryNames %}
          <div class="badge text-bg-success">
            {{ categoryName }}
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="card-body">
      <h5 class="card-title me-2">
        <a href="#">
          {{ offerDto.title }}
        </a>
      </h5>

      <div class="card-text">
        {{ offerDto.content|u.truncate(70, '...') }}
      </div>
    </div>

    <div class="card-footer border-top">
      <div class="d-flex justify-content-between align-items-center">
        <a href="#" class="btn btn-link p-0 mb-0">
          {{ 'view-detail'|trans }}

          <i class="bi bi-arrow-right ms-1"></i>
        </a>

        <a href="#" class="h6 mb-0 z-index-2">
          <i class="fa-regular fa-heart"></i>
        </a>
      </div>
    </div>
  </div>
</div>