{% extends 'dashboard-base.html.twig' %}

{% block title %}
  {{ 'guest-details'|trans }}
{% endblock %}

{% block page_heading %}
  <h1 class="h2">
    {{ 'guest-details'|trans }}

    {{ guestDetailsDto.firstName }}

    {{ guestDetailsDto.lastName }}
  </h1>

  <a
      href="{{ path('wedding_guest_update', { weddingId: weddingId, id: guestDetailsDto.id }) }}"
      class="btn btn-primary"
      data-bs-toggle="tooltip"
      data-bs-title="{{ 'edit'|trans }}">
    <i class="bi bi-pencil"></i>
  </a>
{% endblock %}

{% block page_content %}
  <table class="table">
    <tbody>
      <tr>
        <td>
          {{ 'first-name'|trans }}
        </td>

        <td>
          {{ guestDetailsDto.firstName }}
        </td>
      </tr>

      <tr>
        <td>
          {{ 'last-name'|trans }}
        </td>

        <td>
          {{ guestDetailsDto.lastName }}
        </td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('wedding_guest_list', { weddingId: weddingId }) }}">
    {{ 'back-to-list'|trans }}
  </a>
{% endblock %}