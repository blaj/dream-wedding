{% extends 'dashboard-base.html.twig' %}

{% block title %}
  {{ 'task-group-details'|trans }}
{% endblock %}

{% block page_heading %}
  <h1 class="h2">
    {{ 'task-group-details'|trans }}

    {{ taskGroupDetailsDto.name }}
  </h1>

  <a
      href="{{ path('wedding_task_group_update', { weddingId: weddingId, id: taskGroupDetailsDto.id }) }}"
      class="btn btn-primary"
      data-controller="tooltip"
      data-bs-title="{{ 'edit'|trans }}">
    <i class="bi bi-pencil"></i>
  </a>
{% endblock %}

{% block page_content %}
  <div class="card shadow">
    <div class="card-body">
      <table class="table">
        <tbody>
          <tr>
            <td>
              {{ 'name'|trans }}
            </td>

            <td>
              {{ taskGroupDetailsDto.name }}
            </td>
          </tr>

          <tr>
            <td>
              {{ 'tasks'|trans }}
            </td>

            <td>
              {% for taskName in taskGroupDetailsDto.taskNames %}
                <span class="badge text-bg-primary">
              {{ taskName }}
            </span>
              {% endfor %}
            </td>
          </tr>

          <tr>
            <td>
              {{ 'color'|trans }}
            </td>

            <td>
              {% if taskGroupDetailsDto.color is not null %}
                <span class="badge d-block" style="background-color: {{ taskGroupDetailsDto.color }}"></span>
              {% endif %}
            </td>
          </tr>
        </tbody>
      </table>

      <a href="{{ path('wedding_task_group_list', { weddingId: weddingId }) }}">
        {{ 'back-to-list'|trans }}
      </a>
    </div>
  </div>
{% endblock %}