{% extends 'wedding/wedding-base.html.twig' %}

{% block page_heading %}
  <h1 class="h2">
    {{ 'wedding-details'|trans }}

    {{ weddingDetailsDto.name }}
  </h1>

  <a
      href="{{ path('wedding_update', { id: weddingDetailsDto.id }) }}"
      class="btn btn-primary"
      data-controller="tooltip"
      data-bs-title="{{ 'edit'|trans }}">
    <i class="bi bi-pencil"></i>
  </a>
{% endblock %}

{% block tab_content %}
  <table class="table">
    <tbody>
      <tr>
        <td>
          {{ 'name'|trans }}
        </td>

        <td>
          {{ weddingDetailsDto.name }}
        </td>
      </tr>

      <tr>
        <td>
          {{ 'on-date'|trans }}
        </td>

        <td>
          {{ weddingDetailsDto.onDate|dateFormat }}
        </td>
      </tr>

      <tr>
        <td>
          {{ 'budget'|trans }}
        </td>

        <td>
          {{ weddingDetailsDto.budget|money_format }}
        </td>
      </tr>

      <tr>
        <td colspan="2" class="table-group-divider">
          {{ 'wedding-address'|trans }}
        </td>
      </tr>

      <tr>
        <td>
          {{ 'city'|trans }}
        </td>

        <td>
          {{ weddingDetailsDto.weddingAddress.city }}
        </td>
      </tr>

      <tr>
        <td>
          {{ 'street'|trans }}
        </td>

        <td>
          {{ weddingDetailsDto.weddingAddress.street }}
        </td>
      </tr>

      <tr>
        <td>
          {{ 'postcode'|trans }}
        </td>

        <td>
          {{ weddingDetailsDto.weddingAddress.postcode }}
        </td>
      </tr>

      <tr>
        <td colspan="2" class="table-group-divider">
          {{ 'party-address'|trans }}
        </td>
      </tr>

      <tr>
        <td>
          {{ 'city'|trans }}
        </td>

        <td>
          {{ weddingDetailsDto.partyAddress.city }}
        </td>
      </tr>

      <tr>
        <td>
          {{ 'street'|trans }}
        </td>

        <td>
          {{ weddingDetailsDto.partyAddress.street }}
        </td>
      </tr>

      <tr>
        <td>
          {{ 'postcode'|trans }}
        </td>

        <td>
          {{ weddingDetailsDto.partyAddress.postcode }}
        </td>
      </tr>
    </tbody>
  </table>
{% endblock %}