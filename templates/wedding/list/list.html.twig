{% extends 'dashboard-base.html.twig' %}

{% block title %}
  {{ 'wedding-list'|trans }}
{% endblock %}

{% block page_title %}
  {{ 'wedding-list'|trans }}
{% endblock %}

{% block page_content %}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>
          {{ 'name'|trans }}
        </th>

        <th>
          {{ 'actions'|trans }}
        </th>
      </tr>
    </thead>

    <tbody>
      {% for weddingDto in weddingsListItemDto %}
        <tr>
          <td>
            {{ weddingDto.name }}
          </td>

          <td>
            <a href="{{ path('wedding_details', { id: weddingDto.id }) }}" class="btn btn-primary btn-sm">
              <i class="bi bi-eye"></i>
            </a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}