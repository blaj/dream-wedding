{% extends 'dashboard-base.html.twig' %}

{% block title %}
  {{ 'wedding-list'|trans }}
{% endblock %}

{% block page_heading %}
  <h1 class="h2">
    {{ 'wedding-list'|trans }}
  </h1>

  <a
      href="{{ path('wedding_create') }}"
      class="btn btn-primary"
      data-bs-toggle="tooltip"
      data-bs-title="{{ 'add'|trans }}">
    <i class="bi bi-plus-circle"></i>
  </a>
{% endblock %}

{% block page_content %}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>
          {{ 'name'|trans }}
        </th>

        <th>
          {{ 'on-date'|trans }}
        </th>

        <th>
          {{ 'actions'|trans }}
        </th>
      </tr>
    </thead>

    <tbody>
      {% for weddingDto in weddingsListItemDto %}
        <tr>
          <td>
            {{ weddingDto.name }}
          </td>

          <td>
            {{ weddingDto.onDate|dateFormat }}
          </td>

          <td class="d-flex">
            <a
                href="{{ path('wedding_details', { id: weddingDto.id }) }}"
                class="btn btn-primary btn-sm me-1"
                data-bs-toggle="tooltip"
                data-bs-title="{{ 'details'|trans }}">
              <i class="bi bi-eye"></i>
            </a>

            <a
                href="{{ path('wedding_update', { id: weddingDto.id }) }}"
                class="btn btn-secondary btn-sm me-1"
                data-bs-toggle="tooltip"
                data-bs-title="{{ 'edit'|trans }}">
              <i class="bi bi-pencil"></i>
            </a>

            <form action="{{ path('wedding_delete', { id: weddingDto.id }) }}" method="post">
              <button
                  type="submit" class="btn btn-danger btn-sm"
                  data-bs-toggle="tooltip"
                  data-bs-title="{{ 'delete'|trans }}">
                <i class="bi bi-trash3"></i>
              </button>

              <input type="hidden" name="_method" value="DELETE">
            </form>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}