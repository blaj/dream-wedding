{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "paths": {
      "~": [
        "./node_modules"
      ],
      "@assets/*": [
        "./assets/*"
      ]
    },
    "typeRoots": [
      "./assets/types",
      "./node_modules/@types"
    ]
  },
  "include": ["assets/**/*"],
  "exclude": ["**/*.spec.ts"]
}